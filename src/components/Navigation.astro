---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/research', label: 'Research & Insights' },
  { href: '/sdg4', label: 'SDG 4' },
  { href: '/education', label: 'Education & Outreach' },
  { href: '/blog', label: 'Publications' },
  { href: '/about', label: 'About' }
];
const currentPath = Astro.url.pathname;
---
<header class="site-header">
  <nav class="navigation">
    <div class="nav-brand">
      <a href="/">Society & AI</a>
    </div>
    <ul class="nav-menu">
      {navItems.map(item => (
        <li>
          <a 
            href={item.href} 
            class={currentPath === item.href ? 'nav-link active' : 'nav-link'}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<style>
  /* Reset any conflicting styles */
  .site-header {
    background: white !important;
    border-bottom: 1px solid #e2e8f0 !important;
    position: sticky !important;
    top: 0 !important;
    z-index: 100 !important;
    width: 100% !important;
    margin: 0 !important;
    padding: 0 !important;
  }
  
  .navigation {
    max-width: 1200px !important;
    margin: 0 auto !important;
    display: flex !important;
    justify-content: space-between !important;
    align-items: center !important;
    padding: 1rem 2rem !important;
    width: 100% !important;
    box-sizing: border-box !important;
  }
  
  .nav-brand a {
    font-family: 'Playfair Display', serif !important;
    font-size: 1.5rem !important;
    font-style: italic !important;
    color: #1a365d !important;
    text-decoration: none !important;
    white-space: nowrap !important;
    font-weight: 400 !important;
  }
  
  .nav-menu {
    display: flex !important;
    list-style: none !important;
    gap: 2rem !important;
    margin: 0 !important;
    padding: 0 !important;
    flex-shrink: 0 !important;
  }
  
  .nav-menu li {
    margin: 0 !important;
    padding: 0 !important;
  }
  
  .nav-link {
    color: #2d3748 !important;
    text-decoration: none !important;
    font-weight: 500 !important;
    font-family: 'Open Sans', sans-serif !important;
    white-space: nowrap !important;
    transition: color 0.2s ease !important;
    font-size: 1rem !important;
    line-height: 1.5 !important;
    padding: 0 !important;
    margin: 0 !important;
    border: none !important;
    display: inline-block !important;
  }
  
  .nav-link:hover {
    color: #3182ce !important;
  }
  
  .nav-link.active {
    color: #3182ce !important;
    border-bottom: 2px solid #3182ce !important;
    padding-bottom: 2px !important;
  }
  
  @media (max-width: 768px) {
    .navigation {
      flex-direction: column !important;
      padding: 1rem !important;
    }
    
    .nav-menu {
      margin-top: 1rem !important;
      flex-wrap: wrap !important;
      justify-content: center !important;
      gap: 1rem !important;
    }
    
    .nav-link.active {
      border-bottom: none !important;
      color: #3182ce !important;
    }
  }
</style>