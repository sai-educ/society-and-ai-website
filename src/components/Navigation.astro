---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/research', label: 'Research & Insights' },
  { href: '/sdg4', label: 'SDG 4' },
  { href: '/education', label: 'Education & Outreach' },
  { href: '/blog', label: 'Publications' },
  { href: '/about', label: 'About' }
];
const currentPath = Astro.url.pathname;
---
<header class="site-header">
  <nav class="navigation">
    <div class="nav-brand">
      <a href="/">Society & AI</a>
    </div>
    <ul class="nav-menu">
      {navItems.map(item => (
        <li>
          <a 
            href={item.href} 
            class={currentPath === item.href ? 'nav-link active' : 'nav-link'}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<style>
  .site-header {
    background: white;
    border-bottom: 1px solid #e2e8f0;
    position: sticky;
    top: 0;
    z-index: 100;
    width: 100%;
  }
  
  .navigation {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    width: 100%;
    box-sizing: border-box;
  }
  
  .nav-brand a {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-style: italic;
    color: #1a365d;
    text-decoration: none;
    white-space: nowrap;
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
    flex-shrink: 0;
  }
  
  .nav-link {
    color: #2d3748;
    text-decoration: none;
    font-weight: 500;
    font-family: 'Open Sans', sans-serif;
    white-space: nowrap;
    transition: color 0.2s ease;
  }
  
  .nav-link:hover {
    color: #3182ce;
  }
  
  .nav-link.active {
    color: #3182ce;
    border-bottom: 2px solid #3182ce;
    padding-bottom: 2px;
  }
  
  @media (max-width: 768px) {
    .navigation {
      flex-direction: column;
      padding: 1rem;
    }
    
    .nav-menu {
      margin-top: 1rem;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }
    
    .nav-link.active {
      border-bottom: none;
      color: #3182ce;
    }
  }
</style>