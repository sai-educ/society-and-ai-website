---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/research', label: 'Research & Insights' },
  { href: '/sdg4', label: 'SDG 4' },
  { href: '/education', label: 'Education & Outreach' },
  { href: '/blog', label: 'Publications' },
  { href: '/about', label: 'About' }
];

const currentPath = Astro.url.pathname;
---

<header class="site-header">
  <nav class="navigation">
    <div class="nav-brand">
      <a href="/">Society & AI</a>
    </div>
    <ul class="nav-menu">
      {navItems.map(item => (
        <li>
          <a 
            href={item.href} 
            class:list={['nav-link', { active: currentPath === item.href }]}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<style>
  .site-header {
    background: white;
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
    width: 100%;
    /* Fix for navigation shifting */
    padding-right: calc(100vw - 100%);
    box-sizing: border-box;
  }
  
  .navigation {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    /* Ensure consistent width */
    width: 100%;
    box-sizing: border-box;
  }
  
  .nav-brand a {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-style: italic;
    color: var(--color-primary);
    text-decoration: none;
    /* Prevent text shifting */
    white-space: nowrap;
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
    /* Ensure consistent sizing */
    flex-shrink: 0;
  }
  
  .nav-link {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    /* Prevent text wrapping */
    white-space: nowrap;
  }
  
  .nav-link:hover,
  .nav-link.active {
    color: var(--color-accent);
  }

  /* Fix for scrollbar shifting */
  html {
    margin-left: calc(100vw - 100%);
    margin-right: 0;
  }

  @media (max-width: 768px) {
    .navigation {
      flex-direction: column;
      padding: 1rem;
    }
    
    .nav-menu {
      margin-top: 1rem;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }
  }
</style>