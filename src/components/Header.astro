---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/research">Research & Insights</HeaderLink>
      <HeaderLink href="/sdg4">SDG 4</HeaderLink>
      <HeaderLink href="/education">Education & Outreach</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/get-involved">Get Involved</HeaderLink>
    </div>
    <div class="social-links">
      <!-- You can keep or remove these social links -->
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  h2 {
    margin: 0;
    font-size: 1.2em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
    color: #1a365d;
    font-style: italic;
  }
  
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
  }
  
  nav a {
    padding: 1em 0.8em;
    color: #2d3748;
    border-bottom: 4px solid transparent;
    text-decoration: none;
    font-weight: 500;
  }
  
  nav a.active {
    text-decoration: none;
    border-bottom-color: #3182ce;
  }
  
  nav a:hover {
    color: #3182ce;
  }
  
  .social-links,
  .social-links a {
    display: flex;
  }
  
  @media (max-width: 920px) {
    .social-links {
      display: none;
    }
    
    .internal-links {
      display: flex;
      flex-wrap: wrap;
    }
    
    nav a {
      padding: 0.5em 0.6em;
      font-size: 0.9em;
    }
  }
</style>